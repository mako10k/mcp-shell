{
  "name": "@mako10k/mcp-shell",
  "version": "0.1.1",
  "description": "MCP server interface for shell-server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-shell": "dist/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "changelog:release": "node scripts/changelog-release.mjs",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "test:e2e": "npm run build && node --test test/e2e-sdk.test.mjs"
  },
  "author": "mako10k",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mako10k/mcp-shell.git"
  },
  "bugs": {
    "url": "https://github.com/mako10k/mcp-shell/issues"
  },
  "homepage": "https://github.com/mako10k/mcp-shell#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@mako10k/shell-server": "^0.2.4",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0"
  }
}
